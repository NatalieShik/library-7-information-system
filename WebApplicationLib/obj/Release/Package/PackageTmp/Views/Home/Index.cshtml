@{
    ViewBag.Title = "Home Page";
}
<h1 style="text-align:center">Добро пожаловать!</h1>
<h2 style="text-align:center">Надеюсь, вы готовы приступить к работе!</h2>

<div style="margin:unset; padding:10px">
    @model List<BookInfo>
    <h4>ТОП-3 самых популярных книг</h4>
    <table class="table">
        <tr>
            <th>
                Название
            </th>
            <th>
                Сколько раз брали
            </th>
        </tr>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.TotalCount</td>
            </tr>
        }
    </table>
</div>

<form method="get" action="@Url.Action("GenerateDocx","Home")" style="text-align: center">
    @Html.AntiForgeryToken()
    <input type="submit" value="Сформировать отчет" class="btn btn-primary btn-lg" />
</form>

