@model WebApplicationLib.Models.List_of_authors

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление</h2>

<h3>Вы уверены, что хотите удалить</h3>
<div>
    <h4>эту связь?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Фамилия автора
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Authors.Surname)
        </dd>

        <dt>
            Название произведения
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Library_catalog.Title)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к списку", "Index")
        </div>
    }
</div>
