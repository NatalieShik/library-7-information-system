@model IEnumerable<WebApplicationLib.Models.List_of_authors>


@{
    ViewBag.Title = "Index";
}

<h2>Произведения и авторы</h2>

<p>
    @Html.ActionLink("Создать связь", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Фамилия автора
        </th>
        <th>
            Название произведения
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Authors.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Library_catalog.Title)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) <br>
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
