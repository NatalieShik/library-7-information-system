<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color: #E6E6FA; font-family:'Bookman Old Style'">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Библиотека №7", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Авторы", "Index", "Authors")</li>
                    <li>@Html.ActionLink("Произведения", "Index", "List_of_authors")</li>
                    <li>@Html.ActionLink("Библиотечный каталог", "Index", "Library_catalog")</li>
                    <li>@Html.ActionLink("Реестр экземпляров", "Index", "Register_of_copies")</li>
                    <li>@Html.ActionLink("Список читателей", "Index", "Registration_list")</li>
                    <li>@Html.ActionLink("Работники", "Index", "Workers")</li>
                    <li>@Html.ActionLink("Должности", "Index", "Job_titles")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET, написанное Шик Наталией</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
